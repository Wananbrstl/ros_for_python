<robot name = 'my_robot'>
    <!--连杆-->
    <link name = 'base_link'>
        <visual>
            <geometry>
                <cylinder radius = '0.03' length = '0.05' />
                <origin xyz = '0 0 0' rpy = '0 0 0' />
            </geometry>
        </visual>
    </link>
    <!-- LINK1 -->
    <link name = "link1">
        <visual>
            <geometry>
                <cylinder radius = "0.03" length = "0.1" />
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0" />
        </visual>
    </link>
    <!-- JOINT between BASE_LINK & LINK1-->
    <joint name = "joint1" type = continuous>
        <parent link = "base_link" />
        <child link = "link1" />
        <origin xyz = "0 0 0"  rpy = "0 0 0" />
        <axis xyz = "0 1 0" />
    </joint>
    <!-- LINK2 -->
    <link name = "link2">
        <visual>
            <geometry>
                <cylinder radius = "0.03" length = "0.05" />
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0" />
        </visual>
    </link>

    <!-- joint2 between link1 and link2-->
    <joint name = "joint2" type = continuous>
        <parent link = "link1" />
        <child link = "link2" />
        <origin xyz = "0 0 0"  rpy = "0 0 0" />
        <axis xyz = "0 1 0" />
    </joint>
</robot>