<launch>

	<arg name = "gui" default = "True" />
	<param name = "robot_description" command = "$(find xacro)/xacro $(find rospy_urdf_learn)/urdf/xacro/car.xacro" />
	<!--param name = 'robot_description' textfile = "$(find rospy_urdf_learn)/urdf/xacro/car_xacro.urdf" /-->
	<node pkg = 'rviz' type = 'rviz' name = 'rviz' required = 'true' 
	args = "-d $(find rospy_urdf_learn)/config/robot.rviz" />
	<node pkg = "joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />	
	<node pkg = "robot_state_publisher" type = "robot_state_publisher" name = "robot_state_publisher"/>
    <!--集中arbotix运动节点, 加载相关参数-->
    <node pkg = "arbotix_python" type = "arbotix_driver" name = "arbotix_driver" output = "screen">
        <!--载入参数-->
        <rosparam command = "load" file = "$(find rospy_urdf_learn)/config/control.yaml" />
        <param name = "sim" value = "true" />
    </node>
</launch>
